<record
	name="message-template-field-type"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="message-template-entry-type"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- settings -->

		<string-field
			name="default-value"/>

		<string-field
			name="help-text"/>

		<integer-field
			name="min-length"
			nullable="yes"/>

		<integer-field
			name="max-length"
			nullable="yes"/>

		<enum-field
			name="charset"
			type="message-template-type-charset"/>

		<!-- statistics -->

		<integer-field
			name="num-parameters"
			default="0"/>

	</fields>

	<collections>

		<children-collection
			type="message-template-parameter"/>

	</collections>

</record>