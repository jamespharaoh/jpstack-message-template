<record
	name="message-template-entry-type"
	type="minor">

	<fields>

		<!-- id -->

		<generated-id-field/>

		<!-- identity -->

		<parent-field
			type="message-template-database"/>

		<code-field/>

		<!-- details -->

		<name-field/>

		<description-field/>

		<deleted-field/>

		<!-- statistics -->

		<integer-field
			name="num-fields"
			default="0"/>

	</fields>

	<collections>

		<children-collection
			type="message-template-field-type"/>

	</collections>

</record>